<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Core permissions for deepfake detection -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    
    <!-- Audio features -->
    <uses-feature 
        android:name="android.hardware.microphone" 
        android:required="true" />
    <uses-feature 
        android:name="android.hardware.telephony" 
        android:required="true" />
    
    <!-- System permissions for foreground service and overlays -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_PHONE_CALL" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:label="DeepfakeGuard"
        android:theme="@style/Theme.DeepfakeGuard"
        android:requestLegacyExternalStorage="true">
        
        <!-- Main activity for deepfake detection app -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <!-- Phone call monitoring service -->
        <service
            android:name=".DeepfakeDetectionService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="phoneCall" />
        
        <!-- Phone state receiver for call detection -->
        <receiver
            android:name=".PhoneStateReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.PHONE_STATE" />
                <!-- NEW_OUTGOING_CALL deprecated but still used for compatibility -->
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>
        
    </application>
</manifest>
